<div = "row">
  <%= form_for([@task.user, @task]) do |f| %>
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
  
        <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.hidden_field :user_id %>
    </div>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control', autofocus: true, placeholder: "タイトル" %>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content, class: 'form-control', placeholder: "内容" %>
    </div>
    <div class="field">
      <%= f.label :deadline %><br>
      <%= f.datetime_select :deadline %>
    </div>
    <div class="field">
      <%= f.hidden_field :charge_id %>
    </div>
    <div class="field">
      <%= f.label :done %><br>
      <%= f.check_box :done %>
    </div>
    <div class="field">
      <%= f.select :status, [["未着手", "0"], ["対応中", "1"]] %>
    </div>
    <div class="actions">
      <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>
