<p id="notice"><%= notice %></p>
<div class="container">
  <h1>タスク一覧</h1>
  <div class="task col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12 table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Content</th>
          <th>Deadline</th>
          <th>Charge</th>
          <th>Done</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.user.name %></td>
            <td><%= task.title %></td>
            <td><%= task.content %></td>
            <td><%= task.deadline %></td>
            <td><%= task.charge.name %></td>
            <td><%= done_display_name(task.done) %></td>
            <td><%= status_display_name(task.status) %></td>
            <td><%= link_to 'Show', user_task_path(task.user, task) %></td>
            <td><%= link_to 'Edit', edit_user_task_path(task.user, task) %></td>
            <td><%= link_to 'Destroy', user_task_path(task.user, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Task', new_user_task_path(@user), class: "btn btn-default" %>
  </div>
</div>
<br>


