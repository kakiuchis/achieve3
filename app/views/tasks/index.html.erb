<p id="notice"><%= notice %></p>
<div class="container">
      <h1>タスク一覧</h1>
      <%= link_to '新規依頼', new_user_submit_request_path, class: 'btn btn-default' %> | 
      <%= link_to '依頼されている一覧', inbox_user_submit_requests_path, class: 'btn btn-default' %> | 
      <%= link_to '依頼している一覧', user_submit_requests_path, class: 'btn btn-default' %>
  <div = "row">
    <div class="task col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12 table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>内容</th>
            <th>期限</th>
            <th>進捗</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= task.title %></td>
              <td><%= task.content %></td>
              <td><%= task.deadline %></td>
              <td><%= done_display_name(task.done) %></td>
              <td><%= link_to 'show', user_task_path(task.user, task) %></td>
              <td><%= link_to 'Edit', edit_user_task_path(task.user, task) %></td>
              <td><%= link_to 'Destroy', user_task_path(task.user, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Task', new_user_task_path(@user), class: "btn btn-default"%>
    </div>
  </div>
</div>
<br>


