<p id="notice"><%= notice %></p>
<div class="container">
    <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
      
      <p>
        <strong>タイトル:</strong>
        <%= @task.title %>
      </p>
      
      <p>
        <strong>内容:</strong>
        <%= @task.content %>
      </p>
      
      <p>
        <strong>締め切り:</strong>
        <%= @task.deadline %>
      </p>
      
      <p>
        <strong>進捗:</strong>
        <%= done_display_name(@task.done) %>
      </p>
      
      <%= link_to 'Edit', edit_user_task_path(@task.user, @task), class: "btn btn-default" %> |
      <%= link_to 'Back', :back, class: "btn btn-default" %>
    </div>
</div>
