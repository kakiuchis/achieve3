<div class="row">
        <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
                <h4>フォローしている人</h4>
        </div>
</div>
<div class="row">
<% current_user.followed_users.each do |user| %>
        <div class="wrapper container-child col-md-2 col-sm-4 col-xs-6 ">
                <p class="profile"><%= link_to profile_img(user), user_path(user.id) %></p>
                <p><%= link_to user.name, user_path(user.id) %></p>
        </div>
<% end %>
</div>
        
<div class="row">
        <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
                <h4>フォローワー</h4>
        </div>
</div>
<div class="row">
<% current_user.followers.each do |user| %>
        <div class="wrapper container-child col-md-2 col-sm-4 col-xs-6 ">
                <p class="profile"><%= link_to profile_img(user), user_path(user.id) %></p>
                <p><%= link_to user.name, user_path(user.id) %></p>
        </div>
<% end %>
</div>